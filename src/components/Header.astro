<header>
  <a href="/" aria-label="LandmarkIRL homepage" id="logo">LandmarkIRL</a>
  <nav>
    <a href="/tags">TAGS</a>
    <a href="/colophon">COLOPHON</a>
    <a href="/rss.xml">RSS</a>
  </nav>
</header>

<script>
  const logo = document.querySelector("#logo");

  logo?.addEventListener("contextmenu", (event) => {
    event.preventDefault();
    window.location.href = "https://davidumoru.me/";
  });
</script>

<style lang="scss">
  header {
    top: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-l);
    width: 100%;
    margin-inline: auto;
    flex-wrap: wrap;
    gap: var(--space-s);
    min-height: 60px;
  }

  #logo {
    padding: var(--space-xs) var(--space-s);
    margin: calc(var(--space-xs) * -1);
    font-size: var(--step-1);
    font-weight: 800;
    text-decoration: none;
    color: var(--text);
    white-space: nowrap;
    flex-shrink: 0;
  }

  nav {
    display: flex;
    gap: var(--space-s);
    align-items: center;

    a {
      padding: var(--space-xs) var(--space-s);
      margin: calc(var(--space-xs) * -1);
      font-size: var(--step--2);
      font-weight: 600;
      text-decoration: none;
      color: var(--text);
      border: 3px solid var(--nav-border);
      border-radius: 3px;
      display: inline-flex;
      gap: var(--space-xs);
      white-space: nowrap;
      flex-shrink: 0;
      transition: all 0.2s ease;
      --nav-border: transparent;

      &.outline {
        --nav-border: var(--text);
      }

      @media (hover: hover) {
        &:hover {
          background-color: var(--text);
          color: var(--bg);
        }
      }
    }
  }

  @media (max-width: 768px) {
    header {
      padding: var(--space-l) var(--space-s);
    }

    nav {
      gap: var(--space-xs);

      a {
        padding: var(--space-xs) var(--space-s);
        font-size: var(--step--2);
      }
    }
  }
</style>
